{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "./dist",
        "baseUrl": ".",
        "esModuleInterop": true,
        "strict": true,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "noImplicitAny": true,
        "sourceMap": false,
        "declaration": false,
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "include": ["./src/**/*", "esbuild.config.js"],
    "exclude": ["node_modules", "**/*.spec.ts", "./src/script/*.ts"],
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    }
}
